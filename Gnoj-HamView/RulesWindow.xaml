<Window x:Class="Gnoj_HamView.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gnoj_HamView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Yakus description" SizeToContent="Width" Height="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True" Margin="5">
        <Grid Name="GrdYakus">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Name" Background="Gainsboro" />
            <Label Grid.Row="0" Grid.Column="1" Content="Fans" Background="Gainsboro" />
            <Label Grid.Row="0" Grid.Column="2" Content="Description" Background="Gainsboro" />
        </Grid>
    </ScrollViewer>
</Window>
